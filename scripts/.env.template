# AuditMySite - Code Signing Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# ================================
# Apple Developer Certificates
# ================================

# Your "Developer ID Application" certificate name from Keychain
# Find it with: security find-identity -v -p codesigning
# Example: "Developer ID Application: John Doe (ABC123DEF4)"
DEVELOPER_ID_APPLICATION=""

# Your "Developer ID Installer" certificate name (for PKG installers)
# Example: "Developer ID Installer: John Doe (ABC123DEF4)"
DEVELOPER_ID_INSTALLER=""

# Your Apple Developer Team ID
# Find it at: https://developer.apple.com/account/#!/membership
TEAM_ID=""

# ================================
# App Notarization
# ================================

# Your Apple ID email
NOTARIZE_USERNAME=""

# App-specific password for notarization
# Create at: https://appleid.apple.com/account/manage -> Sign-In and Security -> App-Specific Passwords
NOTARIZE_PASSWORD=""

# ================================
# App Configuration
# ================================

# Bundle identifier for your app
APP_BUNDLE_ID="com.auditmysite.studio"

# App version
APP_VERSION="1.0.0"

# Build number
BUILD_NUMBER="1"

# ================================
# Optional Settings
# ================================

# Keychain to use (usually "login" or "System")
KEYCHAIN="login"

# Whether to create DMG installer (true/false)
CREATE_DMG="true"

# Whether to notarize automatically (true/false)
AUTO_NOTARIZE="true"
